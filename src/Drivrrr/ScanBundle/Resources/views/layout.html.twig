<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Drivrrr{% endblock %}</title>
    {% block metadata %}
        <meta charset="utf-8">
        <title>Template &middot; Bootstrap</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
    {% endblock %}
    {% block stylesheets %}
        <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/bootstrap-responsive.min.css') }}" rel="stylesheet">
    {% endblock %}
    {% block touchicons %}
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('/bootstrap/bootstrap/docs/assets/ico/apple-touch-icon-144-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('/bootstrap/bootstrap/docs/assets/ico/apple-touch-icon-114-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('/bootstrap/bootstrap/docs/assets/ico/apple-touch-icon-72-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" href="{{ asset('/bootstrap/bootstrap/docs/assets/ico/apple-touch-icon-57-precomposed.png') }}">
        <link rel="shortcut icon" href="{{ asset('/bootstrap/bootstrap/docs/assets/ico/favicon.png') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('js/jquery-1.9.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {% endblock %}
</head>
<body>
{% block pageheader %}
    <!-- PAGE -->
<div class="container">
    <div class="masthead">
        <ul class="nav nav-pills pull-right">
            {% if app.user|default is not empty %}
                {% if app.user.facebookid|default is empty %}
                    <li class="active"><a href={{ path('fos_user_profile_show') }}>{{ app.user.username }}</a></li>
                {% else %}
                    <li class="active"><img src="http://graph.facebook.com/{{ app.user.facebookid }}/picture"></li>
                    <li class="active"><a href={{ path('fos_user_profile_show') }}>{{ app.user.firstname }} {{ app.user.lastname }}</a></li>
                {% endif %}
                <li><a href={{ path('fos_user_security_logout') }}>Sign out</a></li>
            {% else %}
                <!--<li><a href="#">About</a></li> -->
                <li><a href={{ path('fos_user_security_login') }}>Sign In</a></li>
            {% endif %}
            <li class="active"><a href={{ path('scan_home') }}>Home</a></li>
            <li>{{ facebook_login_button({'autologoutlink': true}) }}</li>
        </ul>
        <h3 class="muted">Drivrrr</h3>
    </div>
        {% endblock %}

        {% block pagecontent %}{% endblock %}

        {% block pagefooter %}
            </div> <!--container div
                <!-- PAGE -->
        {% endblock %}
</body>
</html>